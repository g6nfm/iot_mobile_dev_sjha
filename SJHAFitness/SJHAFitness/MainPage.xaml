<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SJHAFitness.MainPage">
    <Grid RowDefinitions="*,0.01*,*,*"
      ColumnDefinitions="*,.5*,*"
      Padding="20">
        
        <Image
            Grid.Column="2"
            Grid.Row="0"
            HorizontalOptions="End"
            Source="sjhalogo.png"
         />

        <Label Grid.Column="0"
            Grid.ColumnSpan="2"
            Text="Welcome back, Jakob!"
            FontAttributes="Bold"
            FontSize="18"
            VerticalOptions="End"
            HorizontalOptions="StartAndExpand"
         />
        
        <Line X1="700"
              Y1="220"
              X2="0"
              Y2="220"
              Stroke="Black"
              StrokeThickness="1.5"
              Grid.ColumnSpan="3"
              Grid.RowSpan="3"
         />
        
    </Grid>
</ContentPage>
