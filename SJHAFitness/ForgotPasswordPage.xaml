<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourNamespace.ForgotPasswordPage">
    <StackLayout Padding="20">
        <!-- Logo -->
        <Image Source="sjhalogo.png" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="150" Margin="0,0,0,20"/>
        <Label Text="Forgot Password" FontSize="Title" FontAttributes="Bold" Margin="0,0,0,30" HorizontalOptions="Center"></Label>
        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" Margin="0,0,0,20"/>
        <Entry x:Name="newPasswordEntry" Placeholder="New Password" IsPassword="True" Margin="0,0,0,20"/>
        <Entry x:Name="confirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True" Margin="0,0,0,30"/>
        <Button Text="Submit" Clicked="OnSubmitClicked" WidthRequest="200" BackgroundColor="Green"/>
    </StackLayout>
</ContentPage>
